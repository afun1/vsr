{
  "rewrites": [{ "source": "/(.*)", "destination": "/" }],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "ALLOWALL" },
        { "key": "Content-Security-Policy", "value": "frame-ancestors *" },
        { "key": "Permissions-Policy", "value": "display-capture=(self)" }
      ]
    }
  ],
  "functions": {
    "api/upload.js": {
      "maxDuration": 60
    }
  }
}
